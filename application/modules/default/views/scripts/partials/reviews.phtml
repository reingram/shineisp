
<?php $items = $this->records; ?>
<?php if(!empty($items)): ?>
	<ul class="media-list">
		<?php foreach ($items as $item) : ?>
		<li class="media">
		    <?php echo Shineisp_Commons_Gravatar::get_gravatar( $item['email'], 60 ); ?>
		    <div class="media-body">
		    	<h4 class="media-heading"><?php echo $item['nick'] ?>, <a href="/<?php echo $item['Products']['uri']?>.html#reviews"><?php echo ucfirst($item['subject']) ?></a> </h4>
		    	<?php echo Shineisp_Commons_TimeSince::time_since($item['publishedat']) ?>
		    	<?php for ($i=1;$i<=$item['stars'];$i++): ?><i class="glyphicon glyphicon-star"></i><?php endfor;?>
		    	<div class="message-body">
		    	    <?php if($this->truncate): ?>
		    	            <?php echo Shineisp_Commons_Utilities::truncate($item['review'], $this->truncate, "...", false, true); ?>
		    	        <?php else: ?>
		    	            <?php echo $item['review']; ?>
		    	    <?php endif?>
		    	</div>		
		    </div> 
		</li>
		<?php endforeach;?>
	</ul>
<?php endif; ?>